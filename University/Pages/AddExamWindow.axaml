<Window
    Title="AddExamWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="University.Pages.AddExamWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,*">
        <TextBlock
            FontSize="16"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,0,0,20"
            Text="Добавить новый экзамен" />

        <ComboBox
            Grid.Row="1"
            PlaceholderText="Выберите преподавателя"
            x:Name="TeacherCombo" />
        <ComboBox
            Grid.Row="2"
            PlaceholderText="Выберите студента"
            x:Name="StudentCombo" />
        <ComboBox
            Grid.Row="3"
            PlaceholderText="Выберите дисциплину"
            x:Name="SubjectCombo" />
        <TextBox
            Grid.Row="4"
            Text="Аудитория (например, т505)"
            x:Name="AuditoriumBox" />
        <ComboBox
            Grid.Row="5"
            PlaceholderText="Оценка"
            x:Name="GradeCombo" />

        <StackPanel
            Grid.Row="6"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Click="CreateButton_Click"
                Content="Создать"
                Width="100" />
            <Button
                Click="CancelButton_Click"
                Content="Отмена"
                Width="100" />
        </StackPanel>
    </Grid>
</Window>
