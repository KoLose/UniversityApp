<Window
    Title="StudentPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="University.Pages.StudentPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowDefinitions="Auto, Auto, Auto">
        <TextBlock
            FontSize="24"
            FontWeight="Bold"
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Text="UniversityApp"
            VerticalAlignment="Center" />

        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Orientation="Horizontal"
            Spacing="20"
            VerticalAlignment="Center">

            <Button
                Click="ViewExamsButton_Click"
                Content="Просмотр экзаменов"
                FontSize="16"
                Height="40"
                Width="250"
                x:Name="ViewExamsButton" />

            <Button
                Click="ViewDisciplinesButton_Click"
                Content="Просмотр дисциплин"
                FontSize="16"
                Height="40"
                Width="250"
                x:Name="ViewDisciplinesButton" />
            <Button
                Click="ViewEmployeesButton_OnClick"
                Content="Просмотр сотрудников"
                FontSize="16"
                Height="40"
                Width="250"
                x:Name="ViewEmployeesButton" />
            <Button
                Click="ViewStudentsButton_Click"
                Content="Просмотр студентов"
                FontSize="16"
                Height="40"
                Width="250"
                x:Name="ViewStudentsButton" />
        </StackPanel>

        <ContentControl Grid.Row="2" x:Name="MainControl" />
    </Grid>
</Window>