<Window
    Title="DepartmentHeadPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="University.Pages.DepartmentHeadPage"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid RowDefinitions="Auto, *">
        <!--  Панель навигации  -->
        <StackPanel
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="10"
            Orientation="Horizontal"
            Spacing="15">
            <Button
                Click="StudentsButton_Click"
                Content="Студенты"
                Width="120"
                x:Name="StudentsButton" />
            <Button
                Click="ExamsButton_Click"
                Content="Экзамены"
                Width="120"
                x:Name="ExamsButton" />
            <Button
                Click="DisciplinesButton_Click"
                Content="Дисциплины"
                Width="120"
                x:Name="DisciplinesButton" />
        </StackPanel>

        <!--  Контент  -->
        <ContentControl Grid.Row="1" x:Name="MainControl" />
    </Grid>
</Window>

