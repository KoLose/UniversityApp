<Window
    Title="AddStudentWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="University.Pages.AddStudentWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,Auto,Auto,*">
        <TextBox Watermark="ФИО" x:Name="FullNameBox" />
        <TextBox
            Grid.Row="1"
            Watermark="Регистрационный номер"
            x:Name="RegNumberBox" />
        <TextBox
            Grid.Row="2"
            Watermark="Логин"
            x:Name="LoginBox" />
        <TextBox
            Grid.Row="3"
            Watermark="Пароль"
            x:Name="PasswordBox" />
        <ComboBox
            Grid.Row="4"
            PlaceholderText="Специальность"
            x:Name="SpecialtyCombo" />

        <StackPanel
            Grid.Row="5"
            HorizontalAlignment="Center"
            Margin="0,20,0,0"
            Orientation="Horizontal"
            Spacing="10">
            <Button
                Click="CreateButton_Click"
                Content="Создать"
                Width="100" />
            <Button
                Click="CancelButton_Click"
                Content="Отмена"
                Width="100" />
        </StackPanel>
    </Grid>
</Window>